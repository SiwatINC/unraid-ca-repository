  <Registry>https://hub.docker.com/r/siwatinc/homebridge_nogui_unraid/</Registry>
  <GitHub>https://github.com/SiwatINC/unraid-ca-repository</GitHub>
  <Repository>siwatinc/homebridge_nogui_unraid</Repository>
  <Support>https://forums.unraid.net/topic/75588-support-siwats-docker-repository/</Support>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
    <Variable>
      <Name>packages</Name>
      <Value>homebridge-pilight homebridge-info</Value>
    </Variable>
  </Environment>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/homebridge</HostDir>
      <ContainerDir>/root/.homebridge</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Networking>
    <Mode>host</Mode>
  </Networking>
